
@using PagedList.Mvc
@using PagedList;
@model StaticPagedList<QuestionsViewModel>
@{

    int index = ((Model.PageNumber - 1) * Model.PageSize) + 1;
}
@using (Ajax.BeginForm("Answered",
        new AjaxOptions
        {
            HttpMethod = "GET",
            UpdateTargetId = "answeredQuestionsPane"
        }))
{
    <input type="hidden" value="@ViewBag.pageSize" />
    <div class="form-group" style="max-width:150px;">
        <label for="exampleSelect">Select Size</label>
        <select class="form-control" id="exampleSelect" name="pageSize" onchange="$(this).submit()">
            <option value="">@ViewBag.CurrentPageSize</option>
            <option value="-1">Show All</option>
            <option value="5">5</option>
            <option value="10">10</option>
            <option value="15">15</option>
            <option value="20">20</option>
            <option value="40">40</option>
            <option value="50">50</option>
           
        </select>
    </div>

}
<table class="table table-striped">
    <thead>
        <tr>
            <th><b>Sr</b></th>
            <th>Product Name</th>
            <th>Question</th>
            <th>Answer</th>
            <th>Visibility</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var faq in Model)
        {
            <tr>
                <td><b>@index</b></td>
                <td><b><a>@faq.ProductName</a></b></td>
                <td>@faq.Question</td>
                <td>
                    <a href="#" class="answer-link" data-toggle="modal" data-target="#editAnswerModal">
                        @faq.Answer
                    </a>
                </td>

                <td class="text-center">
                    @using (Ajax.BeginForm("ChangeVisibility", "FAQAdmin", new { id = faq.FAQId, visibility = !faq.Visibility }, new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "faq-list", OnSuccess = "toggleIcon" }))
                    {
                        <button type="submit" class="btn btn-link">
                            <i id="iconid" class="fa @(faq.Visibility ? "fa-eye" : "fa-eye-slash")"></i>
                        </button>
                    }
                </td>
            </tr>

            <div class="modal fade" id="editAnswerModal" tabindex="-1" role="dialog" aria-labelledby="editAnswerModalLabel">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="editAnswerModalLabel">Edit Answer</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            @using (Html.BeginForm("UpdateAnswer", "FAQAdmin", FormMethod.Post))
                            {
                                <label class="col-form-label"><h3><b>@faq.Question</b></h3></label>
                                <div class="form-group">
                                    <label for="answerText" class="col-form-label">Answer:</label>
                                    <input type="text" required placeholder="@faq.Answer" class="form-control" name="answer" id="answerText">

                                    <input type="number" hidden name="id" value="@faq.FAQId">
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                    <button type="submit" class="btn btn-primary">Update changes</button>
                                </div>
                            }
                        </div>

                    </div>
                </div>
            </div>
            index++;
        }
    </tbody>
</table>

<div class="pagination-wrapper">


    @Html.PagedListPager(Model,
    page => Url.Action("Answered",
    new { pageNumber = page, pageSize = ViewBag.pageSize }),
    PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new AjaxOptions() { HttpMethod = "GET", UpdateTargetId = "answeredQuestionsPane" }))

</div>

