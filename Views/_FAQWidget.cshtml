@model FAQModelParams

<div id="tabs" class="tabs product-tabs" style="margin-top:20px">
    <h3 class="collapsed nav nav-tabs"  style="cursor:pointer;background-color:white;min-height:50px;align-content:center" data-toggle="collapse" href="#tab-con"> Frequently Asked Questions</h3>
    <div id="tab-con" class="tab-content collapse">
        <div class="ibox-content">
            <div id="accordion" role="tablist" aria-multiselectable="true">

                <div class="card mb-4">
                    <div class="card-header" role="tab" id="heading1" style="padding: 20px;">
                        <h4 class="mb-0">
                            <a class="collapsed" data-toggle="collapse" href="#collapse1" aria-expanded="false" aria-controls="collapse1">
                                1. Do You offer a free trial? <i class="fa fa-arrow-down"></i>
                            </a>
                        </h4>
                    </div>
                    <div id="collapse1" class="collapse" role="tabpanel" aria-labelledby="heading1" data-parent="#accordion">
                        <div class="card-body" style="padding: 20px;">
                            <h5>
                                <i>
                                    Yes, we offer a 14-day free trial.
                                </i>
                            </h5>
                        </div>
                    </div>
                </div>

                <div class="card mb-4">
                    <div class="card-header" role="tab" id="heading2" style="padding: 20px;">
                        <h4 class="mb-0">
                            <a class="collapsed" data-toggle="collapse" href="#collapse2" aria-expanded="false" aria-controls="collapse2">
                                2. Do I need a credit card to start? <i class="fa fa-arrow-down"></i>
                            </a>
                        </h4>
                    </div>
                    <div id="collapse2" class="collapse" role="tabpanel" aria-labelledby="heading2" data-parent="#accordion">
                        <div class="card-body" style="padding: 20px;">
                            <h5>
                                <i>
                                    No, you do not need a credit card to start the free trial.
                                </i>
                            </h5>
                        </div>
                    </div>
                </div>

                <div class="card mb-4">
                    <div class="card-header" role="tab" id="heading3" style="padding: 20px;">
                        <h4 class="mb-0">
                            <a class="collapsed" data-toggle="collapse" href="#collapse3" aria-expanded="false" aria-controls="collapse3">
                                3. Can I cancel my account any time? <i class="fa fa-arrow-down"></i>
                            </a>
                        </h4>
                    </div>
                    <div id="collapse3" class="collapse" role="tabpanel" aria-labelledby="heading3" data-parent="#accordion">
                        <div class="card-body" style="padding: 20px;">
                            <h5>
                                <i>
                                    Yes, you can cancel your account at any time.
                                </i>
                            </h5>
                        </div>
                    </div>
                </div>

                <!-- Add more FAQ items here in the same format -->

            <button type="button" class="btn btn-primary"style="margin:10px 0px;align-content:center" data-toggle="modal" data-target="#askQuestionModal">Ask a Question</button>
        <div class="pull-right mx-3">
        </div>
            </div>
    <!-- Button to Open the Modal -->
    <div class="sticky-footer  ">
    </div>
        </div>
    </div>


    <!-- The Modal -->
    <div class="modal fade" id="askQuestionModal" tabindex="-1" role="dialog" aria-labelledby="askQuestionModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="askQuestionModalLabel">Ask a Question</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                @using (Ajax.BeginForm("SubmitQuestion", null, new AjaxOptions() { OnSuccess = "handleQuestionSubmitted" }, new { id = "ask-question-form", @class = "form" }))
                {
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="question">Your Question</label>
                            @Html.TextArea("question", null, new { @class = "form-control", @placeholder = "Type your question here...", @required = "required" })
                            @Html.Hidden("productId", Model.ProductId)
                           
                        </div>
                        <div class="modal-footer ">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary" id="submit-question">Submit Question</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script type="text/javascript">
        function handleQuestionSubmitted(response) {
            // Handle the success response from the server after submitting the question
            alert('Your question has been submitted successfully!');
            $('#askQuestionModal').modal('hide');
        }

        $('#ask-question-form').submit(function (event) {
            event.preventDefault(); // Prevent the default form submission

            var formData = $(this).serializeArray();
            console.log(formData); // Log form data to the console for debugging

            // Submit the form data via AJAX
            $.ajax({
                type: $(this).attr('method'),
                url: $(this).attr('action'),
                data: $(this).serialize(),
                success: handleQuestionSubmitted
            });
        });
    </script>
}

