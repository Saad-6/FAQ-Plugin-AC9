<!-- Question Modal -->
<div class="modal inmodal" id="askQuestionModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content animated fadeIn">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">Answer Question</h4>
                <p>.</p>
            </div>
            <div class="modal-body">
                @using (Ajax.BeginForm("SubmitQuestion",
                new AjaxOptions
                {
                    HttpMethod = "POST",
                    OnSuccess = "$('#askQuestionModal').modal('hide');",
                    OnFailure = "toastr.error('Input Field cannot be empty');"
                }))
                {
                    <label class="col-form-label"><h3><b id="modal-question">Ask a Question: </b></h3></label>
                    <div class="form-group">
                        <label for="answerText" class="col-form-label"><h4>Question : </h4></label>
                        <textarea required class="form-control" placeholder="Your question here ..." name="question" id="answerText" rows="5"></textarea>
                        <input name="productId" type="hidden" value="@ViewBag.ProductId" />            
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" onclick="$('#askQuestionModal').modal('hide');" class="btn btn-primary">Ask Question</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

